<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista Formulario -->
        <record id="view_remove_dynamic_field_selection" model="ir.ui.view">
            <field name="name">task.board.remove.dynamic.field.selection</field>
            <field name="model">task.board</field>
            <field name="arch" type="xml">
                <form string="Eliminar campo dinámico">
                    <sheet>
                        <group>
                            <field name="dynamic_field_to_remove" widget="radio" options="{'horizontal': true}"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="remove_selected_field" string="Eliminar" type="object" class="btn-primary"/>
                        <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="activity_planner_details_view_form" model="ir.ui.view">
            <field name="name">task.board.details.form</field>
            <field name="model">task.board</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" string="Nombre del Grupo"/>
                                <field name="allowed_member_ids" invisible="1"/>
                                <field name="person" widget="many2one_avatar_user" string="Responsable"/>
                                <field name="state" widget="selection" string="Estado"/>
                                <field name="completion_date" string="Fecha"/>
                                <field name="files" widget="many2many_binary" string="Archivos"/>
                                <field name="has_dynamic_fields" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Tareas">
                                <field name="subtask_ids">
                                    <tree class="o_tree_view"
                                          decoration-danger="state == 'stuck'"
                                          decoration-warning="state == 'new'"
                                          decoration-info="state == 'in_progress'"
                                          decoration-success="state == 'done'">
                                       
                                        <field name="name" string="Nombre de La Tarea"/>
                                        <field name="person" widget="many2one_avatar_user" string="Responsable"/>
                                        <field name="state" widget="selection" string="Estado"/>
                                        <field name="completion_date" widget="daterange" string="Fecha"/>
                                        <button type="object" name="action_open_activity_tree" icon="fa-list" string="Ver Subtareas"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        
        <!-- Vista de árbol para subtareas -->
        <record id="view_subtask_tree" model="ir.ui.view">
            <field name="name">subtask.board.tree</field>
            <field name="model">subtask.board</field>
            <field name="arch" type="xml">
                <tree  edit="True" create="True" default_order="name" 
                      decoration-muted="state == 'cancelado'" editable="top" string="Tareas"
                      decoration-danger="state == 'stuck'"
                      decoration-warning="state == 'new'"
                      decoration-info="state == 'in_progress'"
                      decoration-success="state == 'done'">
                    <field name="sequence" widget="handle" string="Secuencia" />
                    <field name ="allowed_member_ids" invisible="1"/>
                    <field name="sequence_number" string="id" invisible="1" />
                    <field name="name" string="Nombre de la tarea" options="{'no_open': True}"/>
                    <field name="task_id" string="Tarea Padre" invisible="1" options="{'no_open': True}"/>
                    <field name="department_id" string="Departamento" />
                    <field name="person" widget="many2one_avatar_user" string="Responsable" options="{'no_open': True}"/>
                    <field name="state" widget="selection" string="Estado" options="{'no_open': True}"/>
                    <field name="completion_date" widget="daterange" string="Fecha" />
                    <field name="files" widget="many2many_binary" string="Archivos" options="{'no_open': True}"/>
                    <!-- Botones de acción -->
                    <button name="action_open_activity_tree" type="object" icon="fa-tasks" string="Ver Subtareas" class="oe_no_button"/>
                     <button name="action_open_dynamic_field_wizard" 
                           string="Añadir Columna" 
                           type="object" 
                           class="btn-primary special-button"
                           icon="fa-plus" 
                           attrs="{'invisible': [('sequence_number', '!=',1 )]}"/>
                    
                    <button name="action_open_delete_field_wizard"
                            string="Eliminar Columna"
                            type="object"
                            class="btn-danger"
                            icon="fa-trash" 
                           attrs="{'invisible': [('sequence_number', '!=',1 )]}"/>
                </tree>
            </field>
        </record>

        <!-- Vista grupos -->
        <record id="activity_planner_task_view_tree" model="ir.ui.view">
            <field name="name">task.board.tree</field>
            <field name="model">task.board</field>
            <field name="priority">10</field>
            <field name="arch" type="xml">
                <tree edit="True" create="True" default_order="sequence_number" 
                      decoration-muted="state == 'cancelado'" editable="top">
                    <!-- Campos que se mostrarán como columnas -->
                    <field name="name"/>
                    
                    <field name="sequence_number" string="id" />
                    <field name="department_id" string="Departamento" invisible="1" />
                    <field name="person" widget="many2one_avatar_user"/>
                    <field name="state" widget="badge"/>
                    <field name="allowed_member_ids" widget="many2many_avatar_user" invisible="1"/>
                    <field name="progress" widget="progressbar" options="{'max_value': 100, 'height': '10px'}"/>
                    <field name="completed_subtasks"/>
                    <field name="total_subtasks"/>
                    <field name="completion_date" widget="daterange"/>
                    <!-- Botones de acción -->
                    <button name="action_view_subtasks" string="Ver Tareas" icon="fa-eye" type="object" class="oe_highlight"/>
                    <button name="action_open_field_tree_groups_wizard" string="Añadir Columna" icon="fa-plus" type="object" attrs="{'invisible': [('sequence_number', '!=',1 )]}"/>
                    <button name="action_open_delete_board_file_wizard" string="Eliminar Columna" icon="fa-trash" type="object" attrs="{'invisible': [('sequence_number', '!=',1 )]}"/>
                </tree>
            </field>
        </record>

        <record id="task_planner.activity_tasks_action" model="ir.actions.act_window">
            <field name="name">Tasks Board</field>
            <field name="res_model">task.board</field>
            <field name="view_mode">form,tree</field>
            <field name="view_id" ref="activity_planner_task_view_tree"/>
            <field name="domain">[('department_id', '=', active_id)]</field>
            <field name="target">current</field>
            <field name="context">
                {
                    'default_department_id': active_id,
                    'tree_view_ref': 'task_planner.activity_planner_task_view_tree', 
                    'form_view_ref': true, 
                    'create': true,  
                    'edit': true  
                }
            </field>
        </record>

        <record id="task_planner.activity_subtasks_action" model="ir.actions.act_window">
            <field name="name">Tasks Board</field>
            <field name="res_model">subtask.board</field>  
            <field name="view_mode">tree</field>  
            <field name="view_id" ref="view_subtask_tree"/> 
            <field name="target">current</field>
            <field name="context">
                {
                    'default_department_id': active_id,
                    'tree_view_ref': 'task_planner.view_subtask_tree', 
                    'form_view_ref': False,  
                    'create': False,  
                    'edit': False  
                }
            </field>
        </record>
    </data>
</odoo>