<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_dynamic_field_wizard_form" model="ir.ui.view">
        <field name="name">dynamic.field.wizard.form</field>
        <field name="model">dynamic.field.wizard</field>
        <field name="arch" type="xml">
            <form string="Crear Campo Dinámico">
                <sheet>
                    <group>
                    <field name="task_board_id" string="Grupo Destino" readonly="1"/>
                    <field name="dynamic_field_name" string="Nombre Técnico" required="1"/>
                    <field name="dynamic_field_label" string="Etiqueta Visible" required="1"/>
                    <field name="dynamic_field_type" string="Tipo de Campo" required="1"/>
                    <field name="field_info" string="Valor Inicial"/>
                </group>
                </sheet>
                <footer>
                    <button name="action_create_dynamic_field" string="Crear" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_dynamic_field_wizard" model="ir.actions.act_window">
        <field name="name">Crear Campo Dinámico</field>
        <field name="res_model">dynamic.field.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>