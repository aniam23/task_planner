<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_dynamic_field_wizard_form" model="ir.ui.view">
        <field name="name">dynamic.field.wizard.form</field>
        <field name="model">dynamic.field.wizard</field>
        <field name="arch" type="xml">
            <form string="Crear Campo Dinámico">
                <sheet>
                    <group>
                        <field name="dynamic_field_name"/>
                        <field name="dynamic_field_label"/>
                        <field name="dynamic_field_type"/>
                        <field name="selection_options" attrs="{'invisible': [('dynamic_field_type', '!=', 'selection')]}"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_create_dynamic_field" string="Crear" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_dynamic_field_wizard" model="ir.actions.act_window">
        <field name="name">Crear Campo Dinámico</field>
        <field name="res_model">dynamic.field.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>