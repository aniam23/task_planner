<?xml version="1.0" encoding="utf-8"?>
<odoo> 
    <data>
        <record id="activity_planner_subtask_form" model="ir.ui.view">
            <field name="name">subtask.planner.form</field>
            <field name="model">subtask.board</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="allowed_member_ids" invisible="1"/>
                                <field name="person" widget="many2one_avatar_user" domain="[('id', 'in', allowed_member_ids)]"/>
                                <field name="state"/>
                                <field name="activity_line_ids">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="person" domain="[('id', 'in', parent.allowed_member_ids)]"/>
                                        <field name="date_deadline"/>
                                        <field name="done"/>
                                    </tree>
                                </field>
                            </group>
                            <group>
                                <field name="files" widget="many2many_binary"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="view_subtask_dynamic_field_form" model="ir.ui.view">
            <field name="name">subtask.board.dynamic.field.form</field>
            <field name="model">subtask.board</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="dynamic_field_name" string="Nombre TÃ©cnico" required="1"/>
                            <field name="dynamic_field_label" string="Etiqueta Visible" required="1"/>
                            <field name="dynamic_field_type" string="Tipo de Campo" required="1" widget="radio"/>
                            <field name="selection_options" string="Opciones de SelecciÃ³n"
                                   attrs="{'invisible': [('dynamic_field_type','!=','selection')]}"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_create_dynamic_field" string="Crear Campo" type="object" class="btn-primary"/>
                        <button string="Cancelar" special="cancel" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>