<?xml version="1.0" encoding="utf-8"?>
<odoo>  
    <record id="activity_planner_subtask_form" model="ir.ui.view">
        <field name="name">subtask.planner.form</field>
        <field name="model">subtask.board</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="sequence_number" string="id"/>
                            <field name="task_id" invisible="1"/>
                            <field name="allowed_member_ids" invisible="1"/>
                            <field name="person" widget="many2one_avatar_user" domain="[('id', 'in', allowed_member_ids)]"/>
                            <field name="state"/>
                            <field name= "completion_date" string="Fecha"/>
                            <field name="department_id" string="Departamento" attrs="{'invisible': [('person', '=', False)]}" />
                        </group>
                        <group>
                            <field name="files" widget="many2many_binary"/>
                        </group>
                    </group>
                    
                   
                    
                    <field name="allowed_member_ids" invisible="1"/>
                </sheet>
            </form>
        </field>
    </record>

     <record id="seq_subtask_board" model="ir.sequence">
            <field name="name">Subtask Board Sequence</field>
            <field name="code">subtask.board.sequence</field>
            <field name="prefix"></field>
            <field name="padding">0</field> 
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
            <field name="company_id" eval="False"/>
    </record>
</odoo>