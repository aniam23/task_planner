<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista formulario para el wizard -->
        <record id="view_add_field_subtask_wizard_form" model="ir.ui.view">
            <field name="name">add.field.subtask.wizard.form</field>
            <field name="model">add.field.subtask.wizard</field>
            <field name="arch" type="xml">
                <form string="Agregar Campo Dinámico">
                    <sheet>
                        <group>
                            <group string="Información de Subtarea" col="4">
                                
                                <field name="subtask_name" readonly="1" class="oe_inline"/>
                            </group>
                            
                            <group string="Configuración del Campo" col="4">
                                <field name="field_label" required="1" placeholder="Ej: Prioridad"/>
                                <field name="field_name" required="1" placeholder="Ej: mi_campo"/>
                                <field name="field_type" required="1"/>
                            </group>
                            
                            <group string="Opciones Específicas" attrs="{'invisible': [('field_type', '!=', 'selection')]}" col="4">
                              
                                <field name="selection_options" nolabel="1" placeholder="alta: Alta Prioridad&#10;media: Media Prioridad&#10;baja: Baja Prioridad"/>
                            </group>
                            
                            <group string="Valor por Defecto" col="4">
                                <field name="default_value" placeholder="Valor inicial para el campo"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_create_dynamic_field" string="Crear Campo" type="object" class="btn-primary"/>
                        <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Acción para abrir el wizard -->
        <record id="action_add_field_subtask_wizard" model="ir.actions.act_window">
            <field name="name">Agregar Campo Dinámico</field>
            <field name="res_model">add.field.subtask.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_add_field_subtask_wizard_form"/>
        </record>
    </data>
</odoo>
