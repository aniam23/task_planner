<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_subtask_activity_tree" model="ir.ui.view">
        <field name="name">subtask.activity.tree</field>
        <field name="model">subtask.activity</field>
        <field name="arch" type="xml">
            <tree edit="True"
                      create="True"
                      decoration-danger="state == 'stuck'"
                      decoration-warning="state == 'new'"
                      decoration-info="state == 'in_progress'"
                      decoration-success="state == 'done'">
                <field name="allowed_member_ids" invisible="1"/>
                <field name="name"/>
                <field name= "sequence_number_id" invisible="1"/>
                <field name="date_deadline"/>
                 <field name="state"/>
                <field name="done" invisible="1"/>
                <field name="person"/>
                <button 
                    name="open_dynamic_field_wizard" 
                    string="Agregar Columna" 
                    type="object" 
                    class="btn-primary"
                    icon="fa-plus"
                    attrs="{'invisible': [('sequence_number_id', '!=',1 )]}"/>

                <button 
                    name="action_open_delete_field_wizard" 
                    string="Eliminar Columna" 
                    type="object" 
                    class="btn-danger"
                    icon="fa-trash"
                    groups="base.group_user"
                    attrs="{'invisible': [('sequence_number_id', '!=',1 )]}"
                />
            </tree>
        </field>
    </record>

    <record id="view_subtask_activity_form" model="ir.ui.view">
        <field name="name">subtask.activity.form</field>
        <field name="model">subtask.activity</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="allowed_member_ids" invisible="1"/>
                        <field name="name"/>
                         <field name= "sequence_number_id" invisible="1"/>
                        <field name="subtask_id"/>
                        <field name="date_deadline"/>
                        <field name="person" options="{'no_create': True}"/>
                         <field name="state"/>
                        <field name="done" invisible="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>