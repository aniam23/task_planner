<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_delete_dynamic_field_wizard_form" model="ir.ui.view">
        <field name="name">delete.dynamic.field.wizard.form</field>
        <field name="model">delete.dynamic.field.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="subtask_id" readonly="1"/>
                        <field name="field_to_delete" 
                               domain="[('model','=','subtask.board'),('state','=','manual')]"
                               required="1"/>
                    </group> 
                </sheet>
                <footer>
                    <button name="action_delete_dynamic_field" 
                            string="Eliminar" 
                            type="object" 
                            class="btn-danger"/>
                    <button string="Cancelar" 
                            special="cancel" 
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>